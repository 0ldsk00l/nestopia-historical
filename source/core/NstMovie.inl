inline BOOL MOVIE::IsLoaded() const 
{ 
	return 
	(
     	state != NOTHING && 
		file.IsOpen()
	); 
}

////////////////////////////////////////////////////////////////////////////////////////
//
////////////////////////////////////////////////////////////////////////////////////////

inline BOOL MOVIE::IsRecording() const 
{ 
	return 
	(
       	!stopped && 
		state == RECORDING && 
		file.IsOpen()
	); 
}

////////////////////////////////////////////////////////////////////////////////////////
//
////////////////////////////////////////////////////////////////////////////////////////

inline BOOL MOVIE::IsPlaying() const 
{ 
	return 
	(
    	!stopped && 
		state == PLAYING
		&& file.IsOpen()
	); 
}

////////////////////////////////////////////////////////////////////////////////////////
//
////////////////////////////////////////////////////////////////////////////////////////

inline BOOL MOVIE::IsStopped() const 
{ 
	return stopped; 
}

////////////////////////////////////////////////////////////////////////////////////////
//
////////////////////////////////////////////////////////////////////////////////////////

inline BOOL MOVIE::CanPlay() const 
{ 
	return 
	(
     	state != NOTHING && 
		file.IsOpen() && 
		file.Size() > sizeof(U32)
	); 
}

////////////////////////////////////////////////////////////////////////////////////////
//
////////////////////////////////////////////////////////////////////////////////////////

inline const PDXSTRING& MOVIE::FileName() const
{ 
	return file.Name(); 
}
